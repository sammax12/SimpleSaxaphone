<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="firstNote.FirstNote2"
    android:background="#999999">

    <Button
        android:id="@+id/finishBtnBtn"
        android:layout_width="176dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/roundbtn"
        android:textAllCaps="false"
        android:text="Finish"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Step 3: Place your mouth over the mouth piece and close your mouth."
        android:textColor="#000000"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="227dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Step 4: Take a deep breath and blow until you play a steady note. (You'll be playing a C# note)"
        android:textColor="#000000"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="209dp"
        android:layout_height="58dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:layout_marginBottom="256dp"
        android:gravity="center"
        android:text="First Note"
        android:textColor="#000000"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="149dp"
        android:src="@drawable/firstnote2" />

</RelativeLayout>