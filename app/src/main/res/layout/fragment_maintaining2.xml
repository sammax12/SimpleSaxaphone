<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maintaining2"
    android:background="#999999">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:src="@drawable/maintaining2" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="176dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/roundbtn"
        android:text="Continue"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="248dp"
        android:layout_marginBottom="-17dp"
        android:gravity="center"
        android:text="Remove neck and use a cloth with a weight to dry off the inside of the neck. Pull weight through the neck until cloth comes out."
        android:textColor="#000000"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_marginBottom="268dp"
        android:gravity="center"
        android:text="Maintaining"
        android:textColor="#000000"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="209dp"
        android:layout_height="58dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        android:layout_marginBottom="181dp"
        android:gravity="center"
        android:text="Step 2"
        android:textColor="#000000"
        android:textSize="35dp" />
</RelativeLayout>